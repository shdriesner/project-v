pkgname=m4
type='pkg'
version=1.4.18
source[0]="http://ftp.gnu.org/gnu/m4/m4-1.4.18.tar.xz"

build() {
    sed -i s/mawk// configure



    ./configure --prefix=/tools \
                --with-shared   \
                --without-debug \
                --without-ada   \
                --enable-widec  \
                --enable-overwrite
    make

    make install
}

