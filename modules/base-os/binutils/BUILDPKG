pkgname=binutils
type='pkg'
version=2.31.1
source[0]="http://ftp.gnu.org/gnu/binutils/$pkgname-$version.tar.xz"

build() {
    expect -c "spawn ls"

    mkdir -v build

    cd build

    ../configure --prefix=/usr   \
             --enable-gold       \
             --enable-ld=default \
             --enable-plugins    \
             --enable-shared     \
             --disable-werror    \
             --enable-64-bit-bfd \
             --with-system-zlib
    
    make tooldir=/usr

    make -k check

    make tooldir=/usr install
}
