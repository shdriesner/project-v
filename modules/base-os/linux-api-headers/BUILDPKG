pkgname=linux-api-headers
type='pkg'
version=4.20.6
source[0]="https://www.kernel.org/pub/linux/kernel/v4.x/linux-4.20.6.tar.xz"

build() {
    echo "This will be filled in by the chroot"
    pwd
    pwd > HI_FROM_CHROOT

    make mrproper

    make INSTALL_HDR_PATH=dest headers_install

    find dest/include \( -name .install -o -name ..install.cmd \) -delete

    cp -rv dest/include/* /usr/include
}